@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    int order = 1;
}

<a asp-action="Create" class="btn btn-outline-success">Create</a>
<table class="table text-center table-bordered my-4">
    <thead>
        <tr>
            <th>#</th>
            <th>Name <th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(order++)</td>
                <td>@item.Name</td>
                <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
                <td><a asp-action="Delete"  asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

